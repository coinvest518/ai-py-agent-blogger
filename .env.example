# FDWA AI Agent Environment Variables
# Copy this file to .env and fill in your values
# For GitHub Actions: Add these as repository secrets in Settings → Secrets → Actions
# Or create a GitHub Environment called "production" with these secrets

# ===========================================
# LLM API Keys
# ===========================================
MISTRAL_API_KEY=your_mistral_key
OPENROUTER_API_KEY=your_openrouter_key
APIFREELLM_API_KEY=your_apifreellm_key
GOOGLE_AI_API_KEY=your_google_ai_key

# HuggingFace (for image generation fallback)
HF_TOKEN=hf_your_token_here
HF_ENABLE=false  # Set to true to enable HuggingFace image fallback (requires credits)

# ===========================================
# LANGSMITH (Required for tracing)
# ===========================================
LANGSMITH_API_KEY=lsv2_your_key_here
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=fdwa-multi-agent
LANGSMITH_WORKSPACE_ID=your_workspace_id

# ===========================================
# COMPOSIO (Social media integrations)
# Get at: https://composio.dev
# ===========================================
COMPOSIO_API_KEY=your_composio_key

# Composio Toolkit Versions (keep these as-is)
COMPOSIO_TOOLKIT_VERSION_SERPAPI=20251111_00
COMPOSIO_TOOLKIT_VERSION_TAVILY=20251023_00
COMPOSIO_TOOLKIT_VERSION_GEMINI=20251023_00
COMPOSIO_TOOLKIT_VERSION_TWITTER=20251024_00
COMPOSIO_TOOLKIT_VERSION_FACEBOOK=20251104_00
COMPOSIO_TOOLKIT_VERSION_LINKEDIN=20251023_00
COMPOSIO_TOOLKIT_VERSION_INSTAGRAM=20251023_00
COMPOSIO_TOOLKIT_VERSION_GMAIL=20251111_00
COMPOSIO_TOOLKIT_VERSION_TELEGRAM=20260211_00

# ===========================================
# FACEBOOK
# ===========================================
FACEBOOK_ACCOUNT_ID=your_account_id
FACEBOOK_PAGE_ID=your_page_id

# ===========================================
# LINKEDIN
# ===========================================
LINKEDIN_ACCOUNT_ID=your_account_id
LINKEDIN_USER_ID=your_user_id
LINKEDIN_AUTHOR_URN=urn:li:person:your_id
LINKEDIN_ACCESS_TOKEN=your_access_token

# ===========================================
# INSTAGRAM
# ===========================================
INSTAGRAM_ACCOUNT_ID=your_account_id
INSTAGRAM_USER_ID=your_user_id

# ===========================================
# TELEGRAM
# ===========================================
TELEGRAM_ACCOUNT_ID=your_account_id
TELEGRAM_AUTH_CONFIG_ID=your_auth_config_id
TELEGRAM_ENTITY_ID=your_entity_id
TELEGRAM_BOT_ENABLED=true
TELEGRAM_BOT_USERNAME=@your_bot
TELEGRAM_BOT_NAME=Your Bot Name
TELEGRAM_GROUP_USERNAME=@your_group
TELEGRAM_GROUP_NAME=Your Group Name
TELEGRAM_GROUP_CHAT_ID=-100xxxxxxxxx
TELEGRAM_BOT_TOKEN=your_bot_token

# ===========================================
# IMAGE GENERATION APIs (Cascade: Pollinations → Freepik)
# ===========================================
POLLINATIONS_API_KEY=your_pollinations_key
FREEPIK_API_KEY=your_freepik_key
IMGBB_API_KEY=your_imgbb_key

# ===========================================
# CoinMarketCap API (for Telegram crypto data)
# ===========================================
COINMARKETCAP_API_KEY=your_cmc_key
COINMARKETCAP_API_DEX_KEY=your_cmc_dex_key

# ===========================================
# SEARCH APIS (via Composio)
# ===========================================
SERPAPI_ACCOUNT_ID=your_serpapi_account
TAVILY_ACCOUNT_ID=your_tavily_account

# ===========================================
# GOOGLE SHEETS (for post tracking)
# ===========================================
GOOGLESHEETS_ACCOUNT_ID=your_account_id
GOOGLESHEETS_USER_ID=your_user_id
GOOGLESHEETS_ACCESS_TOKEN=your_access_token
GOOGLESHEETS_REFRESH_TOKEN=your_refresh_token
GOOGLESHEETS_POSTS_SPREADSHEET_ID=your_spreadsheet_id
GOOGLESHEETS_TOKENS_SPREADSHEET_ID=your_spreadsheet_id

# ===========================================
# TWITTER / X
# ===========================================
TWITTER_ACCOUNT_ID=your_account_id
TWITTER_ENTITY_ID=your_entity_id

# ===========================================
# BLOG / EMAIL
# ===========================================
BLOGGER_EMAIL=your.email@blogger.com
BLOG_AGENT_ENABLED=true

# ===========================================
# GMAIL
# ===========================================
GMAIL_CONNECTED_ACCOUNT_ID=your_account_id
GMAIL_USER_ID=your_user_id
GMAIL_ACCESS_TOKEN=your_access_token
GMAIL_REFRESH_TOKEN=your_refresh_token
GMAIL_TOKEN_URI=https://oauth2.googleapis.com/token
